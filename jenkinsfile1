pipeline {
  agent any

  tools {
    maven 'maven'
  }

  stages {
    stage('Build') {
      steps {
        script {
          sh 'mvn clean package'
        }
      }
    }

    stage('Containerization') {
      steps {
        script {
          sh """
            docker build -t spring-petclinic:\${env.BUILD_NUMBER} .
          """
        }
      }
    }
  }
}