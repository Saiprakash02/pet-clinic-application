pipeline {
  agent any

  stages {
    stage('Build') {
      steps {
        script {
          sh './mvnw clean package'
        }
      }
    }

    stage('Containerization') {
      steps {
        script {
          sh """
            docker build -t spring-petclinic:\${env.BUILD_NUMBER} .
          """
        }
      }
    }
  }
  
  post {
    failure {
      echo 'Pipeline failed'
    }
  }
}